<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <RuntimeIdentifier>browser-wasm</RuntimeIdentifier>
    <WasmMainJSPath>main.js</WasmMainJSPath>
    <OutputType>Exe</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RunAOTCompilation>true</RunAOTCompilation>
    <WasmBuildNative>true</WasmBuildNative>
    <RootNamespace>DotnetRaylibWasm</RootNamespace>
  </PropertyGroup>

  <PropertyGroup Condition=" $(Configuration) == 'Debug' ">
    <!-- -sASYNCIFY_IMPORTS=emscripten_sleep -sASYNCIFY_ADD=WindowShouldClose -sASYNCIFY_IGNORE_INDIRECT
     -s USE_GLFW=3 -s ASYNCIFY=1 -s VERBOSE=1 -s INITIAL_MEMORY=100MB -s MAXIMUM_MEMORY=1000MB -s ALLOW_MEMORY_GROWTH=1 -s ASYNCIFY_STACK_SIZE=300000 
     -->
    <EmccFlags>-sUSE_GLFW=3 -sASYNCIFY=1 -sVERBOSE=1 -O2 -Wbad-function-cast -Wcast-function-type</EmccFlags>
  </PropertyGroup>

  <PropertyGroup Condition=" $(Configuration) == 'Release' ">
    <EmccFlags>-s USE_GLFW=3 -s ASYNCIFY=1 -O3</EmccFlags>
  </PropertyGroup>
  
  <ItemGroup>
    <WasmExtraFilesToDeploy Include="index.html" />
    <WasmExtraFilesToDeploy Include="main.js" />
    <WasmExtraFilesToDeploy Include="favicon.ico" />
    <NativeFileReference Include="raylib.a" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RaylibGame\RaylibGame.csproj" />
  </ItemGroup>

</Project>
